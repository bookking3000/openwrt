#!/bin/ash

[ "$ACTION" == "add" ] || exit 0

PHYNBR=${DEVPATH##*/phy}

[ -n $PHYNBR ] || exit 0

. /lib/functions.sh
. /lib/functions/system.sh

board=$(board_name)

case "$board" in
	archer-c58-v1|\
	archer-c59-v1|\
	archer-c60-v1|\
	archer-c60-v2)
		echo $(macaddr_add $(mtd_get_mac_binary mac 8)  $(($PHYNBR - 1)) ) > /sys${DEVPATH}/macaddress
		;;
	enh1750ext|\
	ews860ap)
		echo $((macaddr_add $(cat /sys/class/net/eth0/address) +2) $(($PHYNBR + 1)) ) > /sys${DEVPATH}/macaddress
		;;
	*)
		;;
esac

